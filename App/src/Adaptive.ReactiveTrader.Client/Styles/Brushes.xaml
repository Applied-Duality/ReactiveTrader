<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ColorRamp1" A="255" R="80" G="00" B="80"/>
    <Color x:Key="ColorRamp2" A="255" R="80" G="20" B="80"/>
    <Color x:Key="ColorRamp3" A="255" R="80" G="40" B="80"/>
    <Color x:Key="ColorRamp4" A="255" R="80" G="60" B="80"/>

    <SolidColorBrush x:Key="PrimaryForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryForeground" Color="#A7A7A7"/>
    
    <SolidColorBrush x:Key="TitleBackground" Color="{StaticResource ColorRamp1}"/>
    <SolidColorBrush x:Key="BackgroundRamp1" Color="{StaticResource ColorRamp1}"/>
    <SolidColorBrush x:Key="BackgroundRamp2" Color="{StaticResource ColorRamp2}"/>
    <SolidColorBrush x:Key="BackgroundRamp3" Color="{StaticResource ColorRamp3}"/>
    <SolidColorBrush x:Key="BackgroundRamp4" Color="{StaticResource ColorRamp4}"/>
    <SolidColorBrush x:Key="HighlightBackground" Color="{StaticResource ColorRamp4}"/>
    <SolidColorBrush x:Key="HighlightForeground" Color="Black"/>

    
</ResourceDictionary>